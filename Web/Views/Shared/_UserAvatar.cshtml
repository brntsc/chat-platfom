@model string

@{
    var name = Model ?? "";
    var hasProfileImage = !string.IsNullOrEmpty(Context.User.FindFirst("ProfileImage")?.Value);
}

@if (hasProfileImage)
{
    <img src="@Context.User.FindFirst("ProfileImage")?.Value" class="rounded-circle" width="40" height="40" alt="profile" />
}
else
{
    <div class="user-avatar" style="background-image: url('@Url.Action("GetAvatar", "Account", new { name = name })')">
    </div>
} 