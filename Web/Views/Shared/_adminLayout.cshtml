<!-- Admin Mesaj Modal -->
<div class="modal fade" id="adminMessageModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Duyuru Gönder</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3">
                    <label>Mesajınız</label>
                    <textarea id="adminMessage" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-group mb-3">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="sendToAllRooms">
                        <label class="custom-control-label" for="sendToAllRooms">
                            Tüm Odalara Gönder
                        </label>
                    </div>
                </div>
                <div id="roomSelection" class="form-group">
                    <label>Odalar</label>
                    <select id="selectedRooms" class="form-control" multiple>
                        <!-- Odalar JavaScript ile doldurulacak -->
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="sendAdminMessage()">Gönder</button>
            </div>
        </div>
    </div>
</div>

<!-- Scripts kısmına ekleyin -->
<script>
function showAdminMessageModal() {
    // Odaları getir
    $.get('/Admin/GetChatRooms', function(response) {
        const select = $('#selectedRooms');
        select.empty();
        
        response.data.forEach(room => {
            select.append(`<option value="${room.id}">${room.name}</option>`);
        });
        
        $('#adminMessageModal').modal('show');
    });
}

$('#sendToAllRooms').change(function() {
    $('#roomSelection').toggle(!this.checked);
});

function sendAdminMessage() {
    const message = $('#adminMessage').val();
    const sendToAll = $('#sendToAllRooms').is(':checked');
    const selectedRooms = sendToAll ? [] : $('#selectedRooms').val();
    
    if (!message) {
        toastr.error('Lütfen bir mesaj girin');
        return;
    }
    
    const formData = new FormData();
    formData.append('message', message);
    formData.append('sendToAllRooms', sendToAll);
    if (selectedRooms) {
        selectedRooms.forEach(roomId => {
            formData.append('selectedRoomIds[]', roomId);
        });
    }
    
    $.ajax({
        url: '/Admin/SendAdminMessage',
        type: 'POST',
        data: formData,
        processData: false,
        contentType: false,
        success: function(response) {
            if (response.success) {
                toastr.success('Mesaj başarıyla gönderildi');
                $('#adminMessageModal').modal('hide');
            } else {
                toastr.error(response.message || 'Bir hata oluştu');
            }
        },
        error: function() {
            toastr.error('Bir hata oluştu');
        }
    });
}
</script>